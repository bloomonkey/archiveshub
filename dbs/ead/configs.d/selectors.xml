	<subConfigs>

		<subConfig type="xpathProcessor" id="identifierXPath">
			<objectType>cheshire3.xpathProcessor.MetadataXPath</objectType>
			<source>
				<xpath>id</xpath>
			</source>
		</subConfig>

		<subConfig type="xpathProcessor" id="nowTimeXPath">
			<objectType>cheshire3.xpathProcessor.MetadataXPath</objectType>
			<source>
				<xpath>now</xpath>
			</source>
		</subConfig>

		<subConfig type="xpathProcessor" id="descriptionXPath">
			<objectType>cheshire3.xpathProcessor.SimpleXPathProcessor</objectType>
			<source>
				<xpath>/ead//did/unittitle</xpath>
				<xpath>/ead//did/origination</xpath>
				<xpath>/ead//scopecontent</xpath>
				<xpath>/ead//controlaccess</xpath>
				<xpath>/c3component/*/did/unittitle</xpath>
				<xpath>/c3component/*/did/origination</xpath>
				<xpath>/c3component/*/scopecontent</xpath>
				<xpath>/c3component/*/controlaccess</xpath>
			</source>
		</subConfig>

		<subConfig type="xpathProcessor" id="anywhereXPath">
			<objectType>cheshire3.xpathProcessor.SimpleXPathProcessor</objectType>
			<source>
				<xpath>/ead/eadheader/*</xpath>
				<xpath>/ead/archdesc/*</xpath>
				<xpath>/c3component</xpath>
			</source>
		</subConfig>

		<subConfig type="xpathProcessor" id="componentXPath">
			<objectType>cheshire3.xpathProcessor.SimpleXPathProcessor</objectType>
			<source>
				<xpath>c</xpath>
				<xpath>c01</xpath>
				<xpath>c02</xpath>
				<xpath>c03</xpath>
				<xpath>c04</xpath>
				<xpath>c05</xpath>
				<xpath>c06</xpath>
				<xpath>c07</xpath>
				<xpath>c08</xpath>
				<xpath>c09</xpath>
				<xpath>c10</xpath>
				<xpath>c11</xpath>
				<xpath>c12</xpath>
			</source>
		</subConfig>

	</subConfigs>

</config>