			<process>
				<object type="extractor" ref="SimpleExtractor"/>
				<object type="workflow" ref="Space-Diacritic-Case-NormalizerWorkflow"/>
			</process>
		</source>
		<options>
			<setting type="recordStoreSizes">1</setting>
		</options>
	</subConfig>
	
